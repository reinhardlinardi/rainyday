                            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" id="dropdown-button" value="KMP">KMP <span class="caret"></span></button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a class="dropdown-item" href="#">KMP</a></li>
                                <li><a class="dropdown-item" href="#">Boyer-Moore</a></li>
                                <li><a class="dropdown-item" href="#">Regex</a></li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-xs-1">
                <form class="form-horizontal">
                    <button type="button" class="btn btn-secondary" id="updater"></button>
                </form>
            </div>
            <div class="col-md-3">
                <h4 id="message">Ready</h4>
            </div>
        </div>

